#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,t;
    scanf("%d",&n);
    if(n<=200){
        t=(int)(n*0.5);
    }
    else if(n<=400){
        t=(int)(n*0.65+100);
    }
    else if(n<=600){
        t=(int)(n*0.8+200);
    }
    else{
        t=(int)(n*1.25+425);
    }
    printf("Rs.%d",t);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
