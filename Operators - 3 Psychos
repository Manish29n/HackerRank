#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int x1,y1,x2,y2;
    scanf("%d%d%d%d",&x1,&y1,&x2,&y2);
    float f1=(float)(x2+x1)/2,f2=(float)(y1+y2)/2;
    printf("Arun's house is located at(%.1f,%.1f)",f1,f2);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
