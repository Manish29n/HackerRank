import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt(),e=0,o=0;
        int arr[]=new int[n];
        for(int i=0;i<n;i++){
            arr[i]=s.nextInt();
            if(arr[i]%2==0)
                e+=arr[i];
            else
                o+=arr[i];
        }
        System.out.print("The sum of the even numbers in the array is "+e+"\nThe sum of the odd numbers in the array is "+o);
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
    }
}
