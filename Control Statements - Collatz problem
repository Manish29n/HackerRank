#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,c=0;
    scanf("%d",&n);
    printf("%d\n",n);
    while(n!=1){
        if(n%2==0)
            n/=2;
        else
            n=n*3+1;
        c++;
        printf("%d\n",n);
    }
    printf("%d",c);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
